<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mobile_number_add_family_memeber"
    tools:context="com.app.caresociousapp.AddFamilyMemberMobileNumberActivity">

    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent" />


    <Button
        android:id="@+id/btn_emergency"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent" />

    <Button
        android:id="@+id/btnHome"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/btn_emergency"
        android:background="@android:color/transparent" />

    <Button
        android:id="@+id/btnSelectService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/btnHome"
        android:background="@android:color/transparent" />


    <EditText
        android:id="@+id/et_mobileNumber"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_ok"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="30dp"
        android:background="@android:color/transparent"
        android:inputType="phone" />

    <Button
        android:id="@+id/btn_countryCode"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_ok"
        android:layout_marginLeft="40dp"
        android:background="@android:color/transparent"
        android:inputType="phone" />

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent" />


</RelativeLayout>
